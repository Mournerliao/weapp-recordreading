.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 60px;
  background: #f0f1f5;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}

.tab-bar-icon {
  width: 32px;
  height: 32px;
}

.tab-bar-text {
  margin-left: 8px;
  font-size: 16px;
  font-weight: 600;
  color: #71BEAE;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  .tab-bar {
    background-color: #1c1c1d;
  }
  /* DarkMode 下的样式 end */
}
