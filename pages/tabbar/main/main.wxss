page {
  background: #ffffff;
}

.mynavbar {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #ffffff;
  z-index: 999;
}

.navbarline {
  height: 46px;
  line-height: 46px;
  display: flex;
  align-items: center;
}

.logo {
  width: 40px;
  height: auto;
  margin-left: 20px;
  border-radius: 50%;
}

.navbartitle {
  margin-left: 10px;
  font-size: 15px;
  font-weight: 600;
  color: #303133;
}

.head_search {
  position: relative;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.text_search {
  box-sizing: border-box;
  padding-left: 42rpx;
  width: 100%;
  height: 40px;
  font-size: 13px;
  color: grey;
  background-color: #f0f1f5;
  border-radius: 10px;
  display: flex;
  align-items: center;
}

.icon_search {
  position: absolute;
  right: 42rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #f0f1f5;
}

.loading {
  width: 100%;
  height: 80vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bankview {
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.bankpic {
  margin: 0 auto !important;
}

.banktext {
  margin-top: 8%;
  font-size: 20px;
  font-weight: 600;
  color: #303133;
}

.bankbutton {
  width: 450rpx !important;
  margin-top: 8% !important;
  font-weight: bold !important;
  border-radius: 10px !important;
}

.top {
  margin-top: 12%;
  margin-left: 60rpx;
  margin-right: 60rpx;
  padding: 40rpx;
  background-color: #f7f7f7;
  border-radius: 10px;
  display: flex;
}

.bookcover {
  margin-top: -80rpx !important;
  flex-shrink: 0 !important;
  box-shadow: 0px -6px 16px -8px rgba(0, 0, 0, 0.08),
    0px -9px 28px 0px rgba(0, 0, 0, 0.05),
    0px -12px 48px 16px rgba(0, 0, 0, 0.03) !important;
}

.topinfo {
  margin-left: 40rpx;
  text-align: center;
  flex: 1;
  width: 0;
}

.booktitle {
  color: #71BEAE;
  font-size: 18px;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bookauthor {
  margin-top: 12px;
  font-size: 15px;
  color: #909399;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.nowreading {
  margin-top: 12px;
  color: #303133;
}

.changebook {
  border-radius: 10px !important;
  color: #909399 !important;
  position: absolute !important;
  right: 60rpx !important;
  margin-top: 12px !important;
}

.cell {
  height: 60px !important;
  /* font-weight: 600 !important; */
  display: flex !important;
  align-items: center !important;
}

.progresscontainer {
  margin-top: 12%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.progressbox {
  width: 600rpx;
  height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progressbg {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
}

.progresscanvas {
  width: 600rpx;
  height: 600rpx;
}

.progresstext {
  position: absolute;
  text-align: center;
}

.readpages {
  color: #71BEAE;
  font-size: 30px;
  font-weight: 600;
}

.allpages {
  color: #303133;
}

.circletext {
  color: #909399;
}

.readpktitle {
  margin-top: 6%;
  margin-left: 60rpx;
  color: #303133;
  font-size: 17px;
  font-weight: 600;
}

.ornament {
  margin-top: 5px;
  margin-left: 60rpx;
  width: 40px;
  height: 3px;
  background-color: #F8C36A;
  border-radius: 3px;
}

.nopk {
  text-align: center;
}

.nopkimg {
  margin-top: 20px !important;
}

.readpk {
  display: flex;
  justify-content: space-between;
}

.grid {
  width: 290rpx;
  margin-top: 40px;
  border-radius: 20px;
  text-align: center;
  background-color: #f0f1f5;
  padding-top: 30px;
  padding-bottom: 30px;
  position: relative;
}

.myInfo {
  margin-left: 60rpx;
}

.cmpInfo {
  margin-right: 60rpx;
}

.name {
  font-size: 16px;
  font-weight: 600;
  color: #303133;
  margin-top: 5px;
}

.smalltitle {
  font-size: 14px;
  color: #909399;
  margin-top: 12px;
}

.smallinfo {
  font-size: 15px;
  font-style: italic;
  margin-top: 5px;
  color: #303133;
}

.winpic {
  position: absolute !important;
  top: -55rpx !important;
  left: 95rpx !important;
}

.blank {
  height: 40px;
}

