page {
  background: #ffffff;
}

.mynavbar {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #ffffff;
}

.navbarline {
  height: 46px;
  line-height: 46px;
  display: flex;
  align-items: center;
}

.logo {
  width: 40px;
  margin-left: 20px;
}

.navbartitle {
  margin-left: 10px;
  font-size: 15px;
  font-weight: 600;
  color: #303133;
}

.head_search {
  position: relative;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.text_search {
  box-sizing: border-box;
  padding-left: 42rpx;
  width: 100%;
  height: 80rpx;
  font-size: 13px;
  color: grey;
  background-color: #f0f1f5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
}

.icon_search {
  position: absolute;
  right: 42rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #f0f1f5;
}

.loading {
  width: 100%;
  height: 80vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.bankview {
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.bankpic {
  width: 80%;
  margin: 0 auto;
}

.banktext {
  margin-top: 8%;
  font-size: 20px;
  font-weight: 600;
  color: #303133;
}

.bankbutton {
  width: 450rpx !important;
  margin-top: 8% !important;
  font-weight: bold !important;
  border-radius: 10px !important;
}

.top {
  margin-top: 12%;
  margin-left: 60rpx;
  margin-right: 60rpx;
  background-color: #f7f7f7;
  border-radius: 20rpx;
}

.bookcover {
  height: 240rpx;
  margin-top: -40rpx;
  margin-left: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0px -6px 16px -8px rgba(0, 0, 0, 0.08),
    0px -9px 28px 0px rgba(0, 0, 0, 0.05),
    0px -12px 48px 16px rgba(0, 0, 0, 0.03);
}

.topright {
  width: 100%;
  padding: 30rpx 20rpx 40rpx 40rpx;
  text-align: center;
}

.booktitle {
  color: #71BEAE;
  font-size: 18px;
  font-weight: 600;
}

.bookauthor {
  margin-top: 24rpx;
  font-size: 15px;
  color: #909399;
}

.nowreading {
  margin-top: 24rpx;
  color: #303133;
}

