.progresscontainer {
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.progressbox {
  width: 600rpx;
  height: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progressbg {
  position: absolute;
  width: 600rpx;
  height: 600rpx;
}

.progresscanvas {
  width: 600rpx;
  height: 600rpx;
}

.progresstext {
  position: absolute;
  text-align: center;
}

.readpages {
  color: #71BEAE;
  font-size: 60rpx;
  font-weight: 600;
}

.allpages {
  color: #303133;
}

.circletext {
  color: #909399;
}

.readpk {
  margin-top: 8%;
  margin-left: 60rpx;
  color: #303133;
  font-size: 34rpx;
  font-weight: 600;
}

.ornament {
  margin-top: 5px;
  margin-left: 60rpx;
  width: 40px;
  height: 3px;
  background-color: #F8C36A;
  border-radius: 6rpx;
}

.myprogress {
  margin-top: 45rpx;
  padding-left: 80rpx;
  display: flex;
}

.cmpprogress {
  margin-top: 20rpx;
  padding-right: 80rpx;
  display: flex;
  flex-direction: row-reverse;
}

.info {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.name {
  margin-top: 10rpx;
  color: #606266;
  font-size: 14px;
}

.progress {
  width: 400rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}

.blank {
  height: 100px;
  padding-bottom: calc(50px + env(safe-area-inset-bottom));
}

@media (prefers-color-scheme: dark) {

  /* DarkMode 下的样式 start */
  page {
    background: #000000;
  }

  .navbar {
    color: #ffffff !important;
    background-color: #000000 !important;
  }

  .navtitle {
    color: #ffffff !important;
  }

  .text_search {
    color: #5d5d5d;
    background-color: #191919;
  }

  .top {
    background-color: #191919;
  }

  .bookcover {
    box-shadow: none;
  }

  .van-circle {
    box-shadow: none;
  }

  .allpages {
    color: #ffffff;
  }

  .circletext {
    color: #ffffff;
  }

  .clockin {
    box-shadow: none !important;
  }

  /* DarkMode 下的样式 end */
}