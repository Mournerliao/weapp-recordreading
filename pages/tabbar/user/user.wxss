.userinfo {
  width: 100%;
  padding-top: 10px;
  padding-bottom: 20px;
  background-color: #f0f1f5;
}
.userinfo-nickname {
  margin-left: 12.5%;
  font-size: 24px;
  font-weight: bold;
  color: #303133;
  line-height: 40px;
  height: 40px;
}
.userinfo-id {
  margin-left: 12.5%;
  color: #606266;
  line-height: 25px;
  height: 25px;
}
.userinfo-avatar {
  width: 65px;
  height: 65px;
  margin-right: 25%;
  border-radius: 50%;
  float: right;
}

.buttons {
  padding-bottom: 40px;
  background-color: #f0f1f5;
  display: flex;
  justify-content: center;
}
.mybutton {
  width: 90rpx;
  height: 90rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 50%;
  font-size: 40rpx;
}
.mybutton::after {
  border: none;
}

