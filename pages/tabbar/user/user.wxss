.haveread {
  height: 60vh;
  margin-top: -20px;
  padding-top: 10px;
  border-radius: 20px 20px 0 0;
  background-color: #FFFFFF;
  text-align: center;
  border: none;
}
.havereadtitle {
  margin-top: 15rpx;
  font-size: 17px;
  font-weight: 600;
  color: #303133;
}

.noreaditem {
  width: 100%;
}

.nobook {
  width: 60%;
  margin-top: 25%;
}
.nobooktext {
  color: #C0C4CC;
  font-size: 15px;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  page {
    background: #000000;
  }
  .userinfo {
    background-color: #191919;
  }
  .collect {
    background-color: #191919;
  }
  .haveread {
    background-color: #000000;
  }
  .noreaditem {
    background-color: #191919;
  }
  .noreaditem span {
    color: #5d5d5d;
  }
  /* DarkMode 下的样式 end */
}