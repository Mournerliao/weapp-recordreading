page {
  padding-bottom: env(safe-area-inset-bottom);
}

.loading {
  width: 100%;
  height: 80vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.nullcollection {
  height: 70vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.nullpic {
  width: 525rpx;
}
.nulltext {
  color: #C0C4CC;
  font-size: 15px;
}

.book {
  position: relative;
  margin: 30px 60rpx 0 60rpx;
  padding: 20px 40rpx 20px 40rpx;
  background-color: #f7f7f7;
  border-radius: 20px;
  display: flex;
  align-items: center;
}
.bookcover {
  width: 200rpx;
  height: auto;
  border-radius: 10px;
  flex-shrink: 0;
}
.bookinfo {
  margin-left: 40rpx;
  margin-right: 60rpx;
  text-align: start;
  flex: 1;
  width: 0;
}
.booktitle {
  color: #71BEAE;
  font-size: 18px;
  font-weight: 600;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bookpages {
  margin-top: 10px !important;
}
.bookauthor {
  margin-top: 10px;
  font-size: 15px;
  color: #909399;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bookrating {
  position: absolute;
  color: #ffd21e;
  font-size: 19px;
  font-weight: 600;
  top: 40rpx;
  right: 40rpx;
}

.blank {
  height: 60px;
  padding-bottom: env(safe-area-inset-bottom);
}

