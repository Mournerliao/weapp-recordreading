page {
  background-color: #FFFFFF;
}

.loading {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.banktext {
  color: #C0C4CC;
}

.backbutton {
  position: fixed !important;
  border-radius: 50% !important;
  margin-left: 40rpx !important;
  color: #000000 !important;
  background-color: rgba(255, 255, 255, .6) !important;
  border: 1px solid rgba(0, 0, 0, .1) !important;
}

.top {
  width: 100%;
  height: 180px;
  position: absolute;
  top: 0;
  z-index: -1;
}

.topcover {
  -webkit-filter: blur(5px) !important;
  filter: blur(5px) !important;
}

.allinfo {
  margin-top: 160px;
  padding-top: 15px;
  padding-bottom: 30px;
  background-color: #FFFFFF;
  border-radius: 20px 20px 0 0;
}

.bookcover {
  display: flex;
  justify-content: center;
}

.coverimg {
  margin-top: -60px !important;
  margin-left: 15px !important;
  box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1) !important;
}

.title {
  margin-left: 14px;
  margin-right: 15px;
  /* display: flex;
  justify-content: center; */
  color: #303133;
  font-size: 18px;
  font-weight: 700;
}

.author {
  margin-top: 8px;
  margin-left: 16px;
  margin-right: 15px;
  font-size: 15px;
  color: #909399;
  word-wrap: break-word;
  /* display: flex;
  justify-content: center; */
}

.pages {
  margin-top: 10px !important;
  margin-left: 16px !important;
  /* color: #909399 !important; */
}

.rating {
  margin-top: 10px;
  margin-left: 12px;
  display: flex;
  align-items: center;
}

.ratingscore {
  margin-left: 10px;
  color: #ffd21e;
  font-weight: bold;
}

.introduce {
  margin-top: 20px;
  margin-left: 20px;
  margin-right: 20px;
}

.introtitle {
  font-weight: 600;
}

.intro {
  margin-top: 10px;
  text-align: justify;
  text-align-last: auto;
  line-height: 22px;
  font-size: 15px;
  color: #909399;
}

