.twobutton {
  margin-top: 20px;
  display: flex;
  justify-content: center;
}

.collect {
  width: 240rpx !important;
  margin-right: 15px !important;
  border-radius: 10px !important;
  font-weight: 600 !important;
  color: #909399 !important;
}

.select {
  width: 300rpx !important;
  margin-left: 15px !important;
  border-radius: 10px !important;
  font-weight: 600 !important;
  box-shadow: 0 5px 20px rgba(255, 188, 3, .3) !important;
}

.vanpopup {
  background-color: #ffffff !important;
}

.popup {
  text-align: center;
}

.popuptitle {
  line-height: 80px;
  color: #606266;
}

.confirm {
  width: 90% !important;
  height: 60px !important;
  font-size: 18px !important;
}

.cancel {
  width: 90% !important;
  height: 60px !important;
  margin-top: 10px;
  font-size: 18px !important;
}

.details {
  margin-top: 20px;
  margin-left: 20px;
  margin-right: 20px;
}

.detailstitle {
  font-weight: 600;
}

.alldetails {
  margin-top: 10px;
  line-height: 30px;
  font-size: 15px;
  color: #909399;
  background-color: rgba(113, 190, 174, 0.15);
  padding: 10px 20px 10px 20px;
  border-radius: 12px;
}

.authorinfo {
  margin-top: 20px;
  margin-left: 20px;
  margin-right: 20px;
}

.authortitle {
  font-weight: 600;
}

.authorintro {
  margin-top: 10px;
  text-align: justify;
  text-align-last: auto;
  line-height: 22px;
  font-size: 15px;
  color: #909399;
}

