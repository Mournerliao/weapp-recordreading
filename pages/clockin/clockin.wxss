page {
  background: linear-gradient(to bottom,#a9e2d9,#71BEAE);
}

.navbar {
  background-color: transparent !important;
}

.loading {
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cellgroup {
  margin-top: 20px;
  padding-left: 40rpx;
  padding-right: 40rpx;
  z-index: 10;
}
.cell {
  height: 120rpx;
  padding-left: 40rpx;
  padding-right: 40rpx;
  color:#303133;
  background-color: #ffffff;
  display: flex;
  align-items: center;
}
.label {
  width: 400rpx;
  font-size: 15px;
  color: #303133;
  background-color: #ffffff;
}
.input {
  width: 100%;
  font-size: 15px;
  color: #606266;
  background-color: #ffffff;
  text-align: start;
}
.topradius {
  border-top-left-radius: 20px !important;
  border-top-right-radius: 20px !important;
}
.bottomradius {
  border-bottom-left-radius: 20px !important;
  border-bottom-right-radius: 20px !important;
}
.ornament {
  margin-top: -50rpx;
  margin-left: 80rpx;
  margin-right: 80rpx;
  height: 80rpx;
  background-color: #ffffff;
  opacity: 0.4;
  border-radius: 40rpx;
}

/* .cover {
  height: 200rpx;
}
