.title {
  color: #71BEAE;
  font-weight: 600;
}

.readnote {
  padding-left: 40rpx;
  padding-right: 40rpx;
  background-color: #ffffff;
}

.notetitle {
  height: 120rpx;
  line-height: 120rpx;
  font-size: 15px;
  color: #303133;
  position: relative;
}

.note {
  height: 140rpx;
}

.flexlayout {
  display: flex;
  align-items: center;
}

.excerpttitle {
  width: 400rpx;
}

.ocr {
  width: 140rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 20rpx;
  right: 0;
  padding: 0;
  font-size: 22px;
  border-radius: 10px;
  background-color: #f0f1f5;
}

.ocr::after {
  border: none;
}

.dialog {
  padding: 20px;
}

.inputheight {
  min-height: 150px;
}

.dialogbuttons {
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
}

.dialogbutton {
  width: 250rpx !important;
  border-radius: 10px !important;
  font-weight: 600 !important;
}

.clockin {
  text-align: center;
}

.clockinbutton {
  width: 400rpx !important;
  margin-top: 60rpx;
  border-radius: 10px !important;
  font-weight: 600 !important;
}

