  width: 100%;
} */
.title {
  color: #71BEAE;
  font-weight: 600;
}

.readnote {
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 40rpx;
  background-color: #ffffff;
}
.notetitle {
  height: 100rpx;
  line-height: 120rpx;
  margin-bottom: 10rpx;
  font-size: 15px;
  color: #303133;
}
.note {
  min-height: 200rpx;
}

.clockin {
  text-align: center;
}
.clockinbutton {
  width: 400rpx !important;
  margin-top: 40px;
  border-radius: 10px !important;
  font-weight: 600 !important;
}

@media (prefers-color-scheme: dark) {
  /* DarkMode 下的样式 start */
  page {
    background-color: #000000;
  }
  .navbar {
    color: #ffffff !important;
    background-color: #000000 !important;
  }
  .navtitle {
    color: #ffffff !important;
  }
  /* DarkMode 下的样式 end */
}