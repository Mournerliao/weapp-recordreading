.icon_search {
  position: absolute;
  right: 42rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #f0f1f5;
}

.scan {
  width: 100%;
  height: 80px;
  position: fixed;
  z-index: 20;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f0f1f5;
  border-radius: 20px 20px 0 0;
  font-weight: 600;
  /* box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.1), 0 -2px 4px -1px rgba(0, 0, 0, 0.06); */
}
.scanbutton {
  width: 450rpx !important;
  border-radius: 10px !important;
}

.rectitle {
  width: 100%;
  padding-top: 20px;
  padding-bottom: 20px;
  text-align: center;
  font-weight: 600;
  background-color: #ffffff;
}
.recommendation {
  width: 100%;
  margin-top: -20px;
  padding-top: 20px;
  padding-bottom: 30px;
  border-radius: 20px 20px 0 0;
  background-color: #ffffff;
}
.recwaterfall {
  width: 630rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
}
.recbook_left {
  width: 285rpx;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
  background-color: #f0f1f5;
  border-radius: 10px;
  padding-bottom: 20rpx;
}
.recbook_right {
  width: 285rpx;
  margin-left: 30rpx;
  margin-bottom: 40rpx;
  background-color: #f0f1f5;
  border-radius: 10px;
  padding-bottom: 20rpx;
}
.bookcover {
  width: 285rpx;
  height: auto;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.booktitle {
  width: 80%;
  margin-top: 10rpx;
  margin-left: 10%;
  margin-right: 10%;
  font-size: 14px;
  color: #303133;
}
.bookauthor {
  width: 80%;
  margin-top: 15rpx;
  margin-left: 10%;
  margin-right: 10%;
  color: gray;
  font-size: 12px;
  word-wrap: break-word;
}
.bookrating {
  width: 80% !important;
  margin-top: 15rpx !important;
  margin-left: 10% !important;
  margin-right: 10% !important;
  color: grey !important;
  font-size: 12px;
}

.blank {
  height: 60px;
  padding-bottom: env(safe-area-inset-bottom);
}

