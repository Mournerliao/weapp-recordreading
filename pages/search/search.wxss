.loading {
  width: 100%;
  height: 60vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.head_search {
  margin-top: 10px;
  margin-left: 40rpx;
  margin-right: 40rpx;
  padding-right: 5px;
  background-color: #f0f1f5;
  border-radius: 10px;
  position: relative;
}
.text_search {
  box-sizing: border-box;
  padding-left: 42rpx;
  width: 80%;
  height: 40px;
  font-size: 13px;
  background-color: #f0f1f5;
  border-radius: 10px;
}
